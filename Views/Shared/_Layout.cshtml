@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var controllerAtual = ViewContext.RouteData.Values["controller"].ToString();
    var classeMenuPrincipal = controllerAtual == "Home" ? "active" : "";
    var classeMenuProdutos = controllerAtual == "Produto" ? "active" : "";
    var classeMenuClientes = controllerAtual == "Cliente" ? "active" : "";
    var classeMenuMotoristas = controllerAtual == "Motorista" ? "active" : "";
    //var classeMenuRotas = controllerAtual == "Rota" ? "active" : "";
}

<!DOCTYPE html >
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
        <title>Panificadora :: @ViewBag.Subtitulo</title>
    </head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Panificadora</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link @classeMenuPrincipal" asp-controller="Home" asp-action="Index">Principal</a>
                    <a class="nav-link @classeMenuProdutos" asp-controller="Produto" asp-action="Index">Produtos</a>
                    <a class="nav-link @classeMenuClientes" asp-controller="Cliente" asp-action="Index">Clientes</a>
                    <a class="nav-link @classeMenuMotoristas" asp-controller="Motorista" asp-action="Index">Motoristas</a>
                    
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        Panificadora&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", false)

</body>

</html>