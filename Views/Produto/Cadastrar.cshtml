@model ProdutoModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de Produto";
    else
        ViewBag.Subtitulo = "Cadastro de Produto";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdProduto">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.NomeProduto">Nome:</label><br>
        <input asp-for="@Model.NomeProduto" class="form-control" autofocus>
        <span asp-validation-for="@Model.NomeProduto" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-4 col-lg-2">
        <label asp-for="@Model.TipoUnidade">Tipo Unidade: (ex: Kg, Uni)</label><br>
        <input asp-for="@Model.TipoUnidade" class="form-control">
        <span asp-validation-for="@Model.TipoUnidade" class="text-danger"></span>
    </div>
    <div class="form-group col-4 col-lg-2">
        <label asp-for="@Model.Preco">Valor Unitário:</label><br>
        <input asp-for="@Model.Preco" class="form-control">
        <span asp-validation-for="@Model.Preco" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>