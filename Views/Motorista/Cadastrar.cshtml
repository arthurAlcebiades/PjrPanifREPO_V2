@model MotoristaModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de Motorista";
    else
        ViewBag.Subtitulo = "Cadastro de Motorista";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdMotorista">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.NomeMotorista">Nome do Motorista:</label><br>
        <input asp-for="@Model.NomeMotorista" class="form-control" autofocus>
        <span asp-validation-for="@Model.NomeMotorista" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.ApelidoRota">Nome da Rota:</label><br>
        <input asp-for="@Model.ApelidoRota" class="form-control" autofocus>
        <span asp-validation-for="@Model.ApelidoRota" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Turno">Turno:</label><br>
        <input asp-for="@Model.Turno" class="form-control" autofocus>
        <span asp-validation-for="@Model.Turno" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>