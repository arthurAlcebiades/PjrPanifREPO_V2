@model MotoristaPedido
@{
    bool alteracao = Context.Request.Query.ContainsKey("med");
    if (alteracao)
        ViewBag.Subtitulo = $"Alteração de Motorista {Model.IdPedido:D4}";
    else
        ViewBag.Subtitulo = $"Cadastro de Motorista {Model.IdPedido:D4}";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdPedido">
    @if (alteracao)
    {
        <input type="hidden" asp-for="@Model.IdMotorista">
    }
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IdMotorista">Motorista:</label><br>
        <select asp-for="@Model.IdMotorista" class="form-control"
                asp-items="@(IEnumerable<SelectListItem>)ViewBag.Motoristas" disabled="@alteracao" autofocus="@(!alteracao)"></select>
        <span asp-validation-for="@Model.IdMotorista" class="text-danger"></span>
    </div>
    <div class="w-100"></div>

    <div class="mt-3">
        <a asp-action="Index" asp-route-ped="@Model.IdPedido" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>